<Window x:Class="SheCodesMod8BlackJackWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SheCodesMod8BlackJackWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="540" Width="960">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock x:Name="TxtBlGameMessages" Grid.ColumnSpan="3" Margin="5,5,5,5" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" FontWeight="Bold"/>
        <Button x:Name="BtnStartGame" Click="BtnStartGame_Click" Grid.Row="1" FontSize="48" FontWeight="Bold">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect> Start Game</Button>
        <Button x:Name="Draw" Grid.Row="1" Grid.Column="1" FontWeight="Bold" FontSize="48">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect> Hit me!</Button>
        <Button x:Name="Pass" Grid.Row="1" Grid.Column="2" FontSize="48" FontWeight="Bold">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect> Pass!</Button>
        <Image Grid.Row="2" Source="SheCodesMod8BlackJackWpf\SheCodesMod8BlackJackWpf\Resources\classic-cards\1.png" Width="72" Height="96" Margin="0,0,5,0" />
        <DockPanel Grid.Row="3">
            <Label DockPanel.Dock="Top" HorizontalAlignment="Center" FontSize="24">My Score:</Label>
            <TextBlock DockPanel.Dock="Bottom" Name="My_Score" FontSize="48" FontWeight="Bold" HorizontalAlignment="Center">0</TextBlock>
        </DockPanel>
        
        <TextBlock Grid.Row="3" Grid.Column="2" Name="BaeBot_Score"></TextBlock>
    </Grid>
</Window>
