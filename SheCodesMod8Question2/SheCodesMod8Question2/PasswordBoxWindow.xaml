<Window x:Class="SheCodesMod8Question2.PasswordBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SheCodesMod8Question2"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <StackPanel Margin="10">
        <Label Background="#FFFF8181">Password first, please!</Label>
        <PasswordBox Name="passWordBox" Margin="0,10,0,0">
        </PasswordBox>
        <Button Name="passwordOK" Margin="0,10,0,0" Click="passwordOK_Click">Submit Password</Button>
    </StackPanel>

</Window>
